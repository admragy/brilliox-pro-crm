{
  "$schema": "https://openapi.vercel.sh/2.0/file.json",
  "framework": "fastapi",
  "buildCommand": "python -m pip install -r requirements.txt",
  "outputDirectory": ".",
  "installCommand": "python -m pip install -r requirements.txt",
  "devCommand": "python main.py",
  "functions": {
    "api/index.py": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "PYTHONUNBUFFERED": "1"
  }
}
